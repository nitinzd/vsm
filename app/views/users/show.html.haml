- if @user.profile.nil?
  %p The profile is empty.
  = link_to "Fill the profile", edit_user_path(@user)
- else
  %table.table
    %thead
      %tr
        %th Name
        %th Nickname
        %th Local address
        %th Permanent address
        %th Phone / Mobile
        %th Date of birth
    %tbody
      %tr
        %td= @user.profile.name
        %td= @user.profile.nickname
        %td= @user.profile.local_address
        %td= @user.profile.permanent_address
        %td= @user.profile.phone_number
        %td= @user.profile.date_of_birth
  = link_to "Edit profile", edit_user_path(@user)

